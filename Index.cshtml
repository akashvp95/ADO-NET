@model IEnumerable<FootBallProject.Models.Football>

@using FootBallProject.Models

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <form action="~/FootBall/Save" method="post">
        <label for="html">TeamName1</label>
        <input type="text" name="teamname1" />
        <br />
        <label for="html">TeamName2</label>
        <input type="text" name="teamname2" />
        <br />
        <label for="html">Status</label>
        <select name="status" id="status">
            <option value="Win">Win</option>
            <option value="Draw">Draw</option>
        </select>
        <br />
        <label for="html">WinningTeam</label>
        <input type="text" name="winteam" />
        <br />
        <label for="html">Points</label>
        <input type="text" name="points" />
        <br />
        <input type="submit" value="Insert" />
    </form> 
</div>


<div stlye ="font-family:Arial">
<h2>Match Id </h2>
<ul>
    @foreach(Football football in @Model)
     {
        <li>
            @Html.ActionLink(football.Status, "details", new { id = football.MatchID })
        </li>
     }
</ul>
</div>

